        "ext-json": "*",
        "koriym/json-schema-faker": "^0.1",
        "koriym/app-state-diagram": "dev-master"
    },
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
